<div>
  <h2>質問編集</h2>
 <%= form_with model: @question, url: public_question_path(@question.id), local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title, :placeholder => "タイトル" %>
  <h4>質問内容</h4>
  <%= f.text_area :body, :placeholder => "詳細を記入してください" %>
  <h4>技術項目</h4>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <h4>質問ステータス</h4>
  <%= f.collection_select :question_status_id, QuestionStatus.all, :id, :status %>
  <%= f.submit "登録" %>
 <% end %>
</div>