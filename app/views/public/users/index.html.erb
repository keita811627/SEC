
<div class="container mt-5">
  <h1>ユーザー　一覧(レベルが高い順)</h1>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>画像</th>
        <th>ユーザー名</th>
        <th>ひとこと</th>
        <th>レベル</th>
        <th colspan="5"></th>
      </tr>
    </thead>
    <% @users.each do |user| %>
    <tbody>
      <tr>
        <td><%= user.id %></td>
        <td>
        <%= link_to public_user_path(user.id) do %>
        <%= attachment_image_tag user, :image, size: '70x70', fallback: "no_image.jpg", size: '70x70' %>
        <% end %>
        </td>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
        <td>
          <% if user.experience_point.to_i <= 5 %>
           1
          <% elsif user.experience_point.to_i >= 5 %>
          <%= user.experience_point.to_i / 5 %>
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>