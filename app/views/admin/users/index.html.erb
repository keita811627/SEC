<h1>管理者側　ユーザー一覧画面</h1>

<div class="container mt-5">
  <table class="table">
    <thead>
      <tr>
        <th>画像</th>
        <th>氏名</th>
        <th>コメント</th>
        <th>メールアドレス</th>
        <th>レベル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <% @users.each do |user| %>
    <tbody>
      <tr>
        <td><%= attachment_image_tag user, :image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
        <td><%= user.email %></td>
        <td></td>
        <td></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>