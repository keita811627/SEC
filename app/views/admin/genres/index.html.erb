<div class="container mt-5">
    <h1>管理側　ジャンル一覧</h1>

    <div>
      <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
       <%= f.text_field :name, :placeholder => "ジャンル名" %>
       <%= f.submit "登録" %>

      <% end %>
    </div>

    <div>
      <table class="table">
      <% @genres.each do |genre| %>
       <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集", edit_admin_genre_path(genre.id) %></td>
       </tr>
       <% end %>

       </table>
    </div>
</div>